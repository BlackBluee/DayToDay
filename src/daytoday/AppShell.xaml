<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:daytoday.Views"
       x:Class="daytoday.AppShell"
       FlyoutBehavior="Flyout"
       Shell.NavBarIsVisible="False"
       FlyoutWidth="280"
       FlyoutBackgroundColor="#2C3E50">

    <Shell.Resources>
        <ResourceDictionary>
            <Style TargetType="TabBar">
                <Setter Property="IsVisible" Value="False"/>
            </Style>

            <Style TargetType="FlyoutItem">
                <Setter Property="Shell.TabBarIsVisible" Value="False"/>
            </Style>
        </ResourceDictionary>
    </Shell.Resources>

    <ShellContent 
        Title="Pulpit"
        Icon="dashboard.png"
        ContentTemplate="{DataTemplate views:DashboardPage}"
        Route="Dashboard"/>

    <ShellContent 
        Title="Zadania"
        Icon="tasks.png"
        ContentTemplate="{DataTemplate views:TasksPage}"
        Route="Tasks"/>

    <ShellContent 
        Title="Kalendarz"
        Icon="calendar.png"
        ContentTemplate="{DataTemplate views:CalendarPage}"
        Route="Calendar"/>

    <ShellContent 
        Title="Ustawienia"
        Icon="settings.png"
        ContentTemplate="{DataTemplate views:SettingsPage}"
        Route="Settings"/>

</Shell>